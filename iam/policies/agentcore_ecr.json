{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowECRAuthToken",
            "Effect": "Allow",
            "Action": [
                "ecr:GetAuthorizationToken"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowECRPullImages",
            "Effect": "Allow",
            "Action": [
                "ecr:BatchGetImage",
                "ecr:GetDownloadUrlForLayer"
            ],
            "Resource": "arn:aws:ecr:${aws_region}:${aws_account_id}:repository/*"
        }
    ]
}
